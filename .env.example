# ==============================
# Environment Configuration
# ==============================

# Application
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
BACKEND_URL=https://koptupbackend-production.up.railway.app

# Database
POSTGRES_PASSWORD=your_secure_postgres_password
DATABASE_URL=postgresql://koptup_user:your_secure_postgres_password@localhost:5432/koptup_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_jwt_secret_min_32_chars_long_very_secure
JWT_REFRESH_SECRET=your_refresh_token_secret_min_32_chars_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=koptup-uploads

# CORS
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Email (SendGrid/SES/SMTP)
EMAIL_FROM=noreply@koptup.com
SENDGRID_API_KEY=your_sendgrid_api_key

# Chat/CRM Integration
NEXT_PUBLIC_CRISP_WEBSITE_ID=your_crisp_id
HUBSPOT_API_KEY=your_hubspot_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,txt,csv

# Vector DB (Optional - for semantic search)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=koptup-docs

# OpenAI (for chat demo)
OPENAI_API_KEY=your_openai_api_key
