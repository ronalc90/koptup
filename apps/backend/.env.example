# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3001
NODE_ENV=development
API_URL=http://localhost:3001

# For Railway: NODE_ENV=production, API_URL=https://your-app.railway.app

# ==============================================
# DATABASE
# ==============================================
# Local development
MONGO_URI=mongodb://localhost:27017/koptup_db

# For Railway: Use MongoDB plugin or MongoDB Atlas
# Railway MongoDB: mongodb://mongo:27017/koptup_db
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/koptup_db

# Alternative key (both work)
MONGODB_URI=mongodb://localhost:27017/koptup_db

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Local development
CORS_ORIGIN=http://localhost:3000,http://localhost:3005

# For Railway: Add your Vercel domain
# CORS_ORIGIN=https://your-app.vercel.app,http://localhost:3000

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,docx,txt,csv

# OpenAI Configuration (REQUIRED for Cuentas MÃ©dicas module)
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OPENAI_MODEL=gpt-4o-mini

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ==============================================
# REDIS (Optional - for caching)
# ==============================================
# Local development
REDIS_URL=redis://localhost:6379

# For Railway: Use Redis plugin
# Railway Redis: redis://default:password@redis.railway.internal:6379

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# ==============================================
# SEED SCRIPT CONFIGURATION (Development only)
# ==============================================
# Passwords for seed users (only used in development/test)
# If not set, random passwords will be generated and displayed in console
SEED_ADMIN_PASSWORD=change-me-admin-dev
SEED_CLIENT_PASSWORD=change-me-client-dev
